<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" 
	"http://www.w3.org/TR/html4/loose.dtd">
<html xmlns:fb="http://ogp.me/ns/fb#" lang="en">
<head>
	
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
	
	<title><%= title %></title>
	<%= stylesheet_link_tag 'reset', :media => 'all' %>
	<%= stylesheet_link_tag 'style', :media => 'all' %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jquery', 'jquery-ui', 'superfish', 'custom' %>
	<%= csrf_meta_tag %>

</head>

<body>
	
	<script>
	  // this allows jquery to be called along with scriptaculous and YUI without any conflicts
	  // the only difference is all jquery functions should be called with $j instead of $
	  // e.g. $j('#div_id').stuff instead of $('#div_id').stuff
	  var $j = jQuery.noConflict();
	</script>
	
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) {return;}
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	
	<div id="navigation-top">	
		
		<%= render 'layouts/navigation' %>
	
	</div><!-- end navigation-top -->
	
	<div class="clear"></div>
	
	<% flash.each do |key, value| %>
		
		<div class="flash <%= key %>">
			<%= value %>
		</div><!-- end flash .class success & error -->
	
	<% end %>
	
	<%= yield %>
	
	<div class="clear"></div>
	
	<%= debug(params) if Rails.env.development? %>
	
	<div id="footer">
		
		<%= render 'layouts/footer' %>	
	
	</div><!-- end footer -->

</body>
</html>
