<div id="main-content">
	
	<div id="full-content-bubble">
		
		<div id="full-content">
			
			<h2>Hello, <%= @user.username.capitalize %></h2>
			<hr>
			<p><%= link_to 'Add New Theme', new_showcase_path %></p> <br />
			<p><%= link_to 'View Themes', '/' %></p> <br />
			<p><%= link_to 'Account Settings', edit_user_path(current_user) %></p> <br />
			<% if current_user.admin? %>
			<p><%= link_to 'Users', users_path %></p> <br />
			<% end %>
			<p><%= link_to "Sign Out", signout_path %></p> <br />
			
			<% if current_user.admin? %>
			<h3>Users</h3>
			<%= @users.count %>
			
			<h3>Showcases</h3>
			<%= @showcases.count %>
			
			<% end %>
		
		</div><!-- end full-content -->
	
	</div><!-- end full-content-bubble -->	

</div><!-- end main-content -->