<div id="main-content">
	
	<div id="full-content-bubble">
		
		<div id="full-content">
			
			<h2>All Users</h2>
			
			<hr>

			<ul class="users">
				<% @users.each do |user| %>
				<li>
					<%= link_to user.name, user_path(user) %>
					<% if current_user.admin? %>
					-
					<%= link_to "edit", edit_user_path(user) %>
					|
					<%= link_to "delete", user_path(user), :method => :delete, :confirm => "You Sure?",
					  									   :title  => "Delete #{user.name}" %>
					<% end %>
				</li>
				<% end %>
			</ul>
			
			<br />
			<div class="back-to">
			<%= link_to "Back to Profile", current_user %>
			</div>
		
		</div><!-- end full-content -->
	
	</div><!-- end full-content-bubble -->
	
			<%= will_paginate %>	

</div><!-- end main-content -->