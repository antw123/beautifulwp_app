<div id="navigation-top">
	
	<%= render 'layouts/navigation' %>

</div><!-- end navigation-top -->

<div class="clear"></div>

<div id="main-content">
	
	<div id="full-content-bubble">
		
		<div id="full-content">
			
			<h2>Sign Up</h2>
			
			<hr>
			
			<%= form_for(@user) do |f| %>
			   <div class="field">
				<%= f.label :name %><br />
				<%= f.text_field :name %>
			   </div>
				
				<div class="field">
					<%= f.label :email %><br />
					<%= f.text_field :email %>
				</div>
				
				<div class="field">
				<%= f.label :password %><br />
				<%= f.password_field :password %>
				</div>
				
				<div class="field">
				<%= f.label :password_confirmation, "Verify Password" %><br />
				<%= f.password_field :password_confirmation %>
				</div>
				
				<div class="actions">
				<%= f.submit "Sign Up" %>
			    </div>
			<% end %>
			<p>Find me in app/views/users/new.html.erb</p><br />
			
		
		</div><!-- end full-content -->
	
	</div><!-- end full-content-bubble -->	

</div><!-- end main-content -->

<div class="clear"></div>

<div id="footer">
	
	<%= render 'layouts/footer' %>	

</div><!-- end footer -->

