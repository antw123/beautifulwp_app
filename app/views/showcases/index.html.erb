<div id="main-content">

	<div id="left-content">
		
		<div id="main-bubble">

			<% if params[:search].blank? %>
			
			<%= render 'layouts/main_bubble' %>
			
			<% else %>
		 	
			<h2 class="tagged-show">Search Results for <%= params[:search].capitalize %></h2>
			
			<% end %>

			<div class="clear"></div>

		</div><!-- end main-bubble -->
		
	<%= render 'layouts/leftcontent' %>
	
	</div><!-- end left-content -->
	
	<div id="sidebar">
		
	<%= render 'layouts/sidebar' %>
			
	</div><!-- end sidebar -->

</div><!-- end main-content -->